<h1><%= @attraction.name %></h1>

<p>Ticket Cost: <%= @attraction.tickets %></p>
<p>Nausea Rating: <%= @attraction.nausea_rating %></p>
<p>Happiness Rating: <%= @attraction.happiness_rating %></p>
<p>Minimum Height: <%= @attraction.min_height %></p>

<% if @current_user.admin %>
  <%= link_to "Edit Attraction", edit_attraction_path %>
  <%= link_to("delete", attraction_path, method: :delete) %>
<% else %>
  <%= form_tag rides_new_path do %>
    <input type="hidden" name="attraction_id" value="<%= @attraction.id%>">
    <input type="hidden" name="user_id" value="<%= session[:user_id]%>">
    <input type="submit" value="Go on this ride">
  <% end %>
<% end %>
